<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>50 Words Anime</title>
    <link rel="stylesheet" href="styles.css"type="text/css">
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap" rel="stylesheet">
<script src="script.js"></script>
</head>
<body>
    <style>
       
    </style>
    <div class="header-content">
           
        <img src="https://image.flaticon.com/icons/png/512/1120/1120972.png" class="header-image" alt="">
   
</div>

    <div class="container">
        <!-- <h1>50 Words Anime</h1> -->
        <form action="/create-forum"method="POST">
        <div class="">
            <label for="title">Anime Name</label>
            <input type="text"name="title" id="title"required
            class="anime-input-name form-control">
        </div>
        <div class="category-menu">
            <label for="tagIds">Category Of Anime</label>
            <div class="col-2 drp-menus">
                <select name="tagIds" id="tagIds"class="dropdown-menus">
                   <% tags.forEach(tag => {%>
                    <option value="<%=tag.id %>"><%=tag.name %></option>
                   <%}) %> 
                </select>
            </div>
        </div>
       
        <div class="form-group">
            <label for="description"></label>
            <textarea name="description" id="description" class="form-control description-input"rows="10" required maxlength="250"placeholder="Write your thoughts about this anime here in 50 words..."></textarea>
        </div>
        <div class="submit-button-div"> <button type="submit" class="submit-button">Create Forum</button></div>
       
        </form>
        
            <P class="forum-post-heading">Forum Posts</P>
       
        <div class="row g-3 mt-3 hello-user">
            <% respForum.forEach(item => { %>
              <div class="col-12 col-sm-6 col-md-4 col-lg-4 ">
                <div class="card forum-data" data-suggestion-id="<%= item.id %>">
                  <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="main-title"><%= item.title %></div>
                    <div class="d-flex justify-content-center align-items-center">
                      
                    </div>
                  </div>
                  <div class="card-body">
                    <p><%= item.description %></p>
                    <% item.tags.forEach(tag => { %>
                      <div class="badge bg-secondary rounded-pill">
                        <%= tag.name %>
                      </div>
                    <% }) %>
                    <div class="d-flex align-items-end flex-row-reverse">
                        <button id="heart-btn" data-up-vote-btn class="px-1 py-0 btn mt-auto p-2">ðŸ§¡</button>
                        <span class="px-2 py-0"data-up-vote-count><%= item.votes %></span>
                    </div>
                    
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
    </div>
</body>
</html>